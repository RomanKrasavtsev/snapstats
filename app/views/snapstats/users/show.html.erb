
<div class="container animated fadeIn">

  <div class="page-header">
    <h1>Users Activity</h1>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <table class="table">

        <tr>
          <th class="col-lg-5"> User login </th>
          <th class="col-lg-3"> Time </th>
          <th>Path</th>
        </tr>

        <% @users_activity.each do |i| %>

          <tr>
            <td> <%= link_to i[:email], activity_user_path(i[:user_id]) %> </td>
            <td title="<%= i[:date] %>"> <%= time_ago_in_words i[:date] %>  </td>
            <td>
              <span class="limit-cell"> 
                <%= i[:path] %> 
              </span>
            </td>
          </tr>

        <% end %>

      </table>
    </div>
  </div>

</div>
