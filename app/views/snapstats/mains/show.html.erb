<!-- Daily overview -->

<div class="container animated fadeIn">

<!-- 	<div class="page-header">
		<h1>Daily overview</h1>
	</div>
 -->
	<div class="row" style="margin-top: 10px;">

		<!-- Most visited pages today -->

		<div class="col-lg-4">
			<table class="table-round">

				<tr>
					<th>
						Common info
					</th>
					<th></th>
				</tr>

				<tr>
					<td>
						Uniq visits
					</td>
					<td><%= @daily_report[:uniqs] %></td>
				</tr>

				<tr>
					<td>
						Clicks per minute
					</td>
					<td><%= @daily_report[:clicks_per_minute] %></td>
				</tr>

				<tr>
					<td>
						Clicks per day
					</td>
					<td><%= @daily_report[:clicks_per_day] %></td>
				</tr>

				<tr>
					<th>
						Most visited pages
					</th>
					<th></th>
				</tr>
				<% @daily_report[:top_pathes].each do |i| %>
					<tr>
						<td><%= i.first %></td>
						<td><%= i.last %></td>
					</tr>
				<% end %>
			</table>
		</div>

		<!-- Browsers today -->

		<div class="col-lg-4">
			<table class="table-round">
				<tr>
					<th>
						Browsers
					</th>
					<th></th>
				</tr>
				<% @daily_report[:browsers].each do |k,v| %>
					<tr>
						<td><%= k %></td>
						<td><%= v %></td>
					</tr>
				<% end %>
			</table>
		</div>

		<!-- Devices today -->

		<div class="col-lg-4">
			<table class="table-round">
				<tr>
					<th>
						Devices
					</th>
					<th></th>
				</tr>
				<% @daily_report[:platforms].each do |k, v| %>
					<tr>
						<td><%= k %></td>
						<td><%= v %></td>
					</tr>
				<% end %>
			</table>
		</div>


	</div>

</div>

