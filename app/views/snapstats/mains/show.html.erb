<!-- Daily overview -->

<div class="container animated fadeIn">

<!-- 	<div class="page-header">
		<h1>Daily overview</h1>
	</div>
 -->
	<div class="row" style="margin-top: 10px;">

		<!-- Most visited pages today -->

		<div class="col-lg-4">
			<table class="table-round">
				<tr>
					<th>
						Most visited pages
					</th>
					<th></th>
				</tr>
				<% @top_pathes.each do |i| %>
					<tr>
						<td><%= i.name %></td>
						<td><%= i.total %></td>
					</tr>
				<% end %>
			</table>
		</div>

		<!-- Browsers today -->

		<div class="col-lg-4">
			<table class="table-round">
				<tr>
					<th>
						Browsers
					</th>
					<th></th>
				</tr>
				<% @top_browsers.sort_by(&:total).reverse.each do |i| %>
					<tr>
						<td><%= i.name %></td>
						<td><%= i.total %></td>
					</tr>
				<% end %>
			</table>
		</div>

		<!-- Devices today -->

		<div class="col-lg-4">
			<table class="table-round">
				<tr>
					<th>
						Devices
					</th>
					<th></th>
				</tr>
				<% @top_devices.sort_by(&:total).reverse.each do |i| %>
					<tr>
						<td><%= i.name %></td>
						<td><%= i.total %></td>
					</tr>
				<% end %>
			</table>
		</div>


	</div>
